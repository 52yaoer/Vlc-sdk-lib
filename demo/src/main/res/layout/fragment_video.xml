<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yyl.vlc.view.FrameLayoutScale
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.videolan.vlc.VlcVideoView
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.yyl.vlc.view.FrameLayoutScale>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="testDemo"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <Button
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change"
            android:visibility="visible" />

        <Button
            android:id="@+id/changeSlave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="字幕切换"
            android:visibility="visible" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/recordStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="recordStart" />

        <Button
            android:id="@+id/recordStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="recordStop" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test" />

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
</FrameLayout>
